<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
   x:Class="MauiApp1.Views.GlownaStrona"
    Title="Lista Zakupow">

	<Grid RowDefinitions="Auto,*,Auto">
		<Label Text="Lista Zakupow" FontSize="28" FontAttributes="Bold"
		Margin="20,10" Grid.Row="0" HorizontalOptions="Center"/>

		<ScrollView Grid.Row="1">
			<StackLayout x:Name="ListaKategorii" Padding="10">
			</StackLayout>
		</ScrollView>

		<Grid Grid.Row="2" Padding="10" ColumnDefinitions="*,*">
			<Button Text="+ Dodaj Kategorie" Clicked="OnDodajKategorieClicked" Grid.Column="0" Margin="5"/>
			<Button Text="Menu" Clicked="OnMenuClicked" Grid.Column="1" Margin="5" BackgroundColor="DarkBlue"/>
		</Grid>
	</Grid>
</ContentPage>
